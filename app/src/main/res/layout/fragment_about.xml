<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutFragment">

    <ScrollView
        android:id="@+id/sv_about_us"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:text="@string/title_our_story"
            android:layout_marginTop="16dp"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:textColor="#3E3E3E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_story_1"
            tools:text="@string/msg_our_story_1"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_story_2"
            tools:text="@string/msg_our_story_2"
            android:textSize="22sp"
            android:textColor="@color/colorSecondaryText"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/title_our_vision"
            android:layout_marginTop="32dp"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="#3E3E3E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_vision"
            tools:text="@string/msg_vision"
            android:textSize="22sp"
            android:textColor="@color/colorSecondaryText"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/title_our_mission"
            android:layout_marginTop="32dp"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="#3E3E3E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_mission"
            tools:text="@string/msg_mission"
            android:textSize="22sp"
            android:textColor="@color/colorSecondaryText"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/title_how"
            android:layout_marginTop="32dp"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="#3E3E3E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_how"
            tools:text="@string/msg_how"
            android:textSize="22sp"
            android:textColor="@color/colorSecondaryText"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </ScrollView>

    <!-- Progress bar -->
    <LinearLayout
        android:id="@+id/ll_progress"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <TextView
            android:text="@string/text_please_wait_dots"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


